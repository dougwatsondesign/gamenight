<p id="notice"><%= notice %></p>


        <div class="container">

            <div class="row">
             
              
                <center><div class="col-md-7">

                    <% if @venue.venues_type == "Bar" %>
                        <%= image_tag('bar-icon.png') %>
                    <% elsif @venue.venues_type == "Brewery" %>
                        <%= image_tag('brewery-icons.png') %>
                    <% elsif @venue.venues_type == "Coffee Shop" %>
                        <%= image_tag('coffee-shop-icon') %>
              
                    <% end %>
                    
                </div></center>

               

                <div class="col-md-5">

               
                
                    <h2 class="section-heading"><%= @venue.name %></h2>
                    <p><strong>Venue Type: </strong><%= @venue.venues_type %></p>
                    <p><strong>Location: </strong><%= @venue.address %></p>
                    <p><strong>Phone: </strong><%= @venue.phone %></p>
                    <p><strong>Website: </strong><%= link_to @venue.website, "http://#{@venue.website}", target: "_blank" %></p>
                    

                     
               
                </div>
         

        </div>
        <!-- /.container -->

</div>

<div id="venue-map"></div>

<%= javascript_tag do %>
   latitude = '<%= j @venue.latitude.to_s %>';
   longitude = '<%= j @venue.longitude.to_s %>';
   address = '<%= j @venue.address %>';
   name = '<%= j @venue.name %>';
   venues_type = '<%= j @venue.venues_type %>';
<% end %>



<%= button_to 'Back', venues_path, method: :get, class: 'btn btn-default' %>
