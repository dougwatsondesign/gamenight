<p id="notice"><%= notice %></p>

<a  name="gamenight"></a>
<div class="container-fluid">
<br>
    <div class="port-header"><h2>Venues!</h2></div>
    <br>
    <div class="row">

      <% @v.each do |venue| %> 
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
          <% if venue.venues_type == "Bar" %>
              <%= image_tag('bar-icon.png') %>
          <% elsif venue.venues_type == "Brewery" %>
              <%= image_tag('brewery-icons.png') %>
          <% elsif venue.venues_type == "Coffee Shop" %>
              <%= image_tag('coffee-shop-icon') %>
            
          <% end %>
            <div class="caption">
              <h3><%= venue.name %></h3>
               <p class="lead"><%= venue.venues_type %></p>
                          <p><ul>
                              <li><%= venue.address %></li>
                              <li><%= venue.phone %></li>
                              <li><%= venue.website %></li>
                          </ul></p>
                <p><%= button_to 'More Venue Info', venue, method: :get, class: 'btn btn-default' %></p>
              
            </div>
          </div>
        </div>
      <% end %>

       
    </div>
</div>


<%= button_to 'New Venue', new_venue_path, method: :get, class: 'btn btn-default' %>