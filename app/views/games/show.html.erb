<p id="notice"><%= notice %></p>


        <div class="container">

            <div class="row">
             
              
                <center><div class="col-md-7">

                      <% if @game.games_type == "Table Top" || @game.games_type == "Tabletop" %>
                        <%= image_tag('tabletop-icon.png', class: "img-responsive") %>
                        <% link_color = "#970083" %>
                      <% elsif @game.games_type == "Card" || @game.games_type == "Card Game" %>
                        <%= image_tag('card-icon.png', class: "img-responsive") %>
                        <% link_color =  "#188cb2" %>
                      <% elsif @game.games_type == "Role Playing" || @game.games_type == "RPG" %>
                        <%= image_tag('rpg-icon.png', class: "img-responsive") %>
                        <% link_color =  "#ae2121" %>
                      <% elsif @game.games_type == "Board Game" || @game.games_type == "Boardgame"%>
                        <%= image_tag('board-game-icon.png', class: "img-responsive") %>
                        <% link_color =  "#009760" %>
                      <% end %>
                    
                </div></center>

               

                <div class="col-md-5">

               
                
                    <h2 class="section-heading"><%= @game.title %></h2>
                    <p><strong>Type: </strong><%= @game.games_type %></p>
                    <p><strong>Category: </strong><%= @game.category %></p>
                    <p><strong>Age: </strong><%= @game.age %></p>
                    <p><strong>Weight: </strong><%= @game.weight %></p>
                    <p><strong># Players: </strong><%= @game.players %></p>
                    <br>
                    <p><strong>Description:</strong></p>
                    <p><%= @game.description %></p>

                   
                    <%= button_to 'Host This Game', new_event_path, method: :get, class: 'btn btn-default' %>
                   

               <br>
                </div>
                <br>
                <br>
                </div>
                </div>
                
                <div class="container-fluid">
                <br>

                <center><h2>Upcoming game nights for <%= @game.title %></h2></center>

                <br>
                
            
                 <% @e.each do |event| %> 
                    <% if event.game == @game.title %>
                        <% event_time = event.time.to_s %>
                        <% event_time = event_time.reverse %>
                        <% j = 0 %>
                        
                        <% while j < 11  do %>
                          <% event_time = event_time.chop %>
                          <% j += 1 %>
                        <% end %>
                        
                        <% event_time = event_time.reverse %>

                        <div class="col-sm-6 col-md-4">
                          <div class="thumbnail">
                            <% if event.icon == "Board Game" %>
                              <%= image_tag('board-game-icon.png') %>
                            <% elsif event.icon == "Card" %>
                              <%= image_tag('card-icon.png') %>
                            <% elsif event.icon == "Role Playing" %>
                              <%= image_tag('rpg-icon.png') %>
                            <% elsif event.icon == "Table Top" %>
                              <%= image_tag('tabletop-icon.png') %>
                            <% elsif event.icon == "Phoenix" %>
                              <%= image_tag('phoenix.png') %>
                            <% elsif event.icon == "Pirate" %>
                              <%= image_tag('pirate.png') %>
                            <% elsif event.icon == "Racing Flags" %>
                              <%= image_tag('raceflag.png') %>
                            <% elsif event.icon == "Radio Active" %>
                              <%= image_tag('radioactive.png') %>
                            <% elsif event.icon == "Builder" %>
                              <%= image_tag('tool.png') %>
                            <% elsif event.icon == "UFO" %>
                              <%= image_tag('ufo.png') %>
                            <% elsif event.icon == "Viking" %>
                              <%= image_tag('viking.png') %>
                            <% end %>
                            <div class="caption">
                              <h3><%= event.title %></h3>
                               <p class="lead"><%= event.game %></p>
                                          <p><ul>
                                            <p><%= event.description[0...256] %>...
                                                <%= link_to "Read More", event %>
                                            </p><br>
                                              <p><strong>Location:</strong> <%= event.location %></p>
                                              <p><strong>When: </strong><%= event.date %> at <%= event_time %></p>
                                              
                                          </ul></p>
                              <p><%= button_to 'More Event Info', event, method: :get, class: 'btn btn-default' %></p>
                            </div>
                          </div>
                        </div>
                    <% else %>
                  <% end%>
                    
                <% end %>
        
          </div>
        
        <!-- /.container -->

</div>



<%= button_to 'Back', games_path, method: :get, class: 'btn btn-default' %>
     